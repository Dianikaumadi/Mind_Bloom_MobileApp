<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/planRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Full‑bleed background (use yours; swap if you prefer discover_bg) -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_splash"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:title="@string/plan_title"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white"
        app:navigationIconTint="@android:color/white"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable content (padded so last card doesn't hide behind nav) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="96dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomBarInclude">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Free Plan Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/planCardBg"
                app:cardCornerRadius="18dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plan_free_title"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:fontFamily="@font/quicksand_semibold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plan_free_price"
                        android:textColor="@android:color/white"
                        android:textSize="28sp"
                        android:fontFamily="@font/quicksand_bold"
                        android:layout_marginTop="2dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFree"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/plan_current"
                        android:textAllCaps="false"
                        android:textColor="@color/planButtonText"
                        app:cornerRadius="22dp"
                        android:backgroundTint="@color/planButtonBg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="✓  @string/plan_daily_quotes"
                            android:textColor="@color/planText"
                            android:lineSpacingExtra="2dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="✓  @string/plan_basic_meditations"
                            android:textColor="@color/planText"
                            android:layout_marginTop="6dp"
                            android:lineSpacingExtra="2dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Plus Plan Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/planCardBg"
                app:cardCornerRadius="18dp"
                app:cardUseCompatPadding="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/plusTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plan_plus_title"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:fontFamily="@font/quicksand_semibold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <!-- Yearly badge -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/plusBadge"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:minHeight="48dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="@string/plan_plus_yearly"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        app:cornerRadius="16dp"
                        android:backgroundTint="@color/planBadgeBg"
                        android:textColor="@color/planBadgeText"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/plusPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plan_plus_price"
                        android:textColor="@android:color/white"
                        android:textSize="28sp"
                        android:fontFamily="@font/quicksand_bold"
                        app:layout_constraintTop_toBottomOf="@id/plusTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:id="@+id/plusPer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plan_per_month"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        app:layout_constraintBaseline_toBaselineOf="@id/plusPrice"
                        app:layout_constraintStart_toEndOf="@id/plusPrice"
                        android:layout_marginStart="6dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPlus"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/plan_select"
                        android:textAllCaps="false"
                        android:textColor="@color/planButtonText"
                        android:backgroundTint="@color/planButtonBg"
                        app:cornerRadius="22dp"
                        app:layout_constraintTop_toBottomOf="@id/plusPrice"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/btnPlus"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="✓  @string/plan_full_meditations"
                            android:textColor="@color/planText"
                            android:lineSpacingExtra="2dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="✓  @string/plan_custom_soundscapes"
                            android:textColor="@color/planText"
                            android:layout_marginTop="6dp"
                            android:lineSpacingExtra="2dp"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Pro Plan Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/planCardBg"
                app:cardCornerRadius="18dp"
                app:cardUseCompatPadding="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/proTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plan_pro_title"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:fontFamily="@font/quicksand_semibold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/proBadge"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:minHeight="48dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="@string/plan_pro_yearly"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        app:cornerRadius="16dp"
                        android:backgroundTint="@color/planBadgeBg"
                        android:textColor="@color/planBadgeText"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/proPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plan_pro_price"
                        android:textColor="@android:color/white"
                        android:textSize="28sp"
                        android:fontFamily="@font/quicksand_bold"
                        app:layout_constraintTop_toBottomOf="@id/proTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:id="@+id/proPer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plan_per_month"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        app:layout_constraintBaseline_toBaselineOf="@id/proPrice"
                        app:layout_constraintStart_toEndOf="@id/proPrice"
                        android:layout_marginStart="6dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPro"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/plan_select"
                        android:textAllCaps="false"
                        android:textColor="@color/planButtonText"
                        android:backgroundTint="@color/planButtonBg"
                        app:cornerRadius="22dp"
                        app:layout_constraintTop_toBottomOf="@id/proPrice"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/btnPro"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="✓  @string/plan_personalized_journeys"
                            android:textColor="@color/planText"
                            android:lineSpacingExtra="2dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="✓  @string/plan_offline_mode"
                            android:textColor="@color/planText"
                            android:layout_marginTop="6dp"
                            android:lineSpacingExtra="2dp"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom navigation ALWAYS fixed -->
    <include
        android:id="@+id/bottomBarInclude"
        layout="@layout/partial_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
