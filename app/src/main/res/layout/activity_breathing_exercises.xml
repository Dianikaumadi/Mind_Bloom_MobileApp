<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/breatheRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash">

    <!-- Top app bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:title="@string/breathe_title"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:navigationIconTint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Content container (no scrolling; pinned between toolbar and bottom) -->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Subtitle "Inhale..." -->
        <TextView
            android:id="@+id/phaseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/breathe_phase_inhale"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"/>

        <!-- Hero image (rounded card) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <ImageView
                android:id="@+id/heroImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/breathing_img"
                android:contentDescription="@string/breathe_hero_desc"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Preset chips -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/patternGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:checkedChip="@id/chip363">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip363"
                style="@style/Widget.Material3.Chip.Assist.Elevated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/breathe_chip_363"
                app:chipBackgroundColor="@color/breatheChipBg"
                android:textColor="@color/mb_text"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip478"
                style="@style/Widget.Material3.Chip.Assist.Elevated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/breathe_chip_478"
                app:chipBackgroundColor="@color/breatheChipBg"
                android:textColor="@color/mb_text"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDeep"
                style="@style/Widget.Material3.Chip.Assist.Elevated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/breathe_chip_deep_focus"
                app:chipBackgroundColor="@color/breatheChipBg"
                android:textColor="@color/mb_text"/>
        </com.google.android.material.chip.ChipGroup>

        <!-- Instruction -->
        <TextView
            android:id="@+id/instructionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/breathe_tip_default"
            android:textColor="@color/breatheTextSecondary"
            android:textAlignment="center"/>

        <!-- Start / Reset / Pause -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStart"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/breathe_btn_start"
                android:textAllCaps="false"
                android:textColor="@color/breatheOnPrimary"
                android:backgroundTint="@color/breathePrimary"
                app:cornerRadius="16dp"/>

            <Space
                android:layout_width="8dp"
                android:layout_height="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/breathe_btn_reset"
                android:textAllCaps="false"
                android:textColor="@color/breathePrimary"
                android:backgroundTint="@color/breatheButtonTonal"
                app:cornerRadius="16dp"/>

            <Space
                android:layout_width="8dp"
                android:layout_height="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPause"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/breathe_btn_pause"
                android:textAllCaps="false"
                android:textColor="@color/breathePrimary"
                android:backgroundTint="@color/breatheButtonTonal"
                app:cornerRadius="16dp"/>
        </LinearLayout>

        <!-- Time pickers row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Minutes -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/breathe_minutes"
                    android:textColor="@android:color/white"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="6dp"
                    app:cardCornerRadius="14dp"
                    app:cardBackgroundColor="@android:color/white">

                    <NumberPicker
                        android:id="@+id/pickerMinutes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp"/>

            <!-- Seconds -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/breathe_seconds"
                    android:textColor="@android:color/white"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="6dp"
                    app:cardCornerRadius="14dp"
                    app:cardBackgroundColor="@android:color/white">

                    <NumberPicker
                        android:id="@+id/pickerSeconds"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>

        <!-- Background Audio title -->
        <TextView
            android:id="@+id/backgroundAudioTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/breathe_bg_audio"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <!-- Background Audio rows (text + CheckBox) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="6dp">

            <!-- Rain -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:paddingVertical="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/audio_rain"
                    android:textColor="@color/breatheTextSecondary"/>

                <CheckBox
                    android:id="@+id/checkRain"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:buttonTint="@color/breathePrimary"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/breatheDivider"/>

            <!-- Forest -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:paddingVertical="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/audio_forest"
                    android:textColor="@color/breatheTextSecondary"/>

                <CheckBox
                    android:id="@+id/checkForest"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:buttonTint="@color/breathePrimary"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/breatheDivider"/>

            <!-- Piano -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:paddingVertical="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/audio_piano"
                    android:textColor="@color/breatheTextSecondary"/>

                <CheckBox
                    android:id="@+id/checkPiano"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:buttonTint="@color/breathePrimary"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
