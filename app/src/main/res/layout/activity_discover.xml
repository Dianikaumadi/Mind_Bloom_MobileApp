<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/discoverRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash">

    <!-- Top bar -->

    <!-- Content area (no scrolling) -->

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIconTint="@color/mb_text"
        app:title="@string/discover_title"
        app:titleCentered="true"
        app:titleTextColor="@color/mb_text" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/bottomBarInclude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 50% column guideline -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/colGuide50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <!-- Greeting -->

        <!-- Search -->
        <TextView
            android:id="@+id/greetingText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/discover_greeting"
            android:textColor="@color/mb_text"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/searchLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/greetingText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:startIconDrawable="@android:drawable/ic_menu_search"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="@color/discoverSearchBg"
            app:hintTextColor="@color/onDark"
            app:cardCornerRadius="24dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingHorizontal="12dp"
                android:hint="@string/discover_search_hint"
                android:textColor="@color/onDark"
                android:textColorHint="@color/onDark"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Quick filter chips -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/quickChips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/searchLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:singleSelection="false"
            app:singleLine="true">

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Filter"
                android:text="@string/chip_sleep"
                android:textSize="12sp"
                app:chipBackgroundColor="@color/accent_chip_bg"
                android:textColor="@color/chip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Filter"
                android:text="@string/chip_focus"
                android:textSize="12sp"
                app:chipBackgroundColor="@color/accent_chip_bg"
                android:textColor="@color/chip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Filter"
                android:text="@string/chip_relax"
                android:textSize="12sp"
                app:chipBackgroundColor="@color/accent_chip_bg"
                android:textColor="@color/chip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Filter"
                android:text="@string/chip_anxiety"
                android:textSize="12sp"
                app:chipBackgroundColor="@color/accent_chip_bg"
                android:textColor="@color/chip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Daily Calm quote -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/quoteCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/quickChips"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/discoverQuoteBg"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:text="@string/discover_quote"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@color/onDark"
                android:gravity="center"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Mood header + divider -->
        <TextView
            android:id="@+id/tvMoodTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/discover_mood_title"
            android:textColor="@color/mb_text"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/quoteCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/dividerMood"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            android:background="@color/discoverDivider"
            app:layout_constraintTop_toBottomOf="@id/tvMoodTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Mood buttons row 1 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBreathing"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="8dp"
            android:text="@string/btn_breathing"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/onPrimary"
            android:lines="2"
            android:gravity="center"
            android:backgroundTint="@color/discoverButton"
            app:cornerRadius="18dp"
            app:elevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/dividerMood"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/colGuide50"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnJournals"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="8dp"
            android:text="@string/btn_journals"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/onPrimary"
            android:gravity="center"
            android:backgroundTint="@color/discoverButton"
            app:cornerRadius="18dp"
            app:elevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/dividerMood"
            app:layout_constraintStart_toStartOf="@id/colGuide50"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Mood buttons row 2 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnYoga"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:text="@string/btn_yoga"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/onPrimary"
            android:lines="2"
            android:gravity="center"
            android:backgroundTint="@color/discoverButton"
            app:cornerRadius="18dp"
            app:elevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/btnBreathing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/colGuide50"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnArts"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:text="@string/btn_arts"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/onPrimary"
            android:lines="2"
            android:gravity="center"
            android:backgroundTint="@color/discoverButton"
            app:cornerRadius="18dp"
            app:elevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/btnJournals"
            app:layout_constraintStart_toStartOf="@id/colGuide50"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Browse by Goal -->
        <LinearLayout
            android:id="@+id/goalHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/btnYoga"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/discover_browse_goal"
                android:textColor="@color/mb_text"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/btnSeeAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discover_see_all"
                android:textColor="@color/mb_text"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <View
            android:id="@+id/dividerGoal"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            android:background="@color/discoverDivider"
            app:layout_constraintTop_toBottomOf="@id/goalHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Goal cards -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardReduceStress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/discoverCard"
            app:layout_constraintTop_toBottomOf="@id/dividerGoal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/colGuide50">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/card_reduce_stress"
                android:textColor="@color/onPrimary"
                android:textSize="14sp"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDailyHabit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/discoverCard"
            app:layout_constraintTop_toBottomOf="@id/dividerGoal"
            app:layout_constraintStart_toStartOf="@id/colGuide50"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/card_daily_habit"
                android:textColor="@color/onPrimary"
                android:textSize="14sp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bottom tip -->
        <TextView
            android:id="@+id/bottomTip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:alpha="0.9"
            android:gravity="center"
            android:text="@string/discover_bottom_tip"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardReduceStress" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom nav -->
    <include
        android:id="@+id/bottomBarInclude"
        layout="@layout/partial_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
