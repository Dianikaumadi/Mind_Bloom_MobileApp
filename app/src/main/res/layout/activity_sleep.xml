<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sleepRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash">

    <!-- VERTICAL SCROLL: whole page -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomBarInclude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sleep"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="12dp" />

            <!-- ===================== MUSIC ===================== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_section_bg"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- right-aligned chip -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:background="@drawable/duration_chip_bg"
                            android:gravity="center"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Music"
                            android:textColor="@color/chip_text"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <!-- horizontal scroller: 4 cards -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:paddingTop="8dp"
                        android:paddingBottom="4dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Card 1 -->
                            <LinearLayout
                                android:layout_width="260dp"
                                android:layout_height="180dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/card_item_bg"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/rounded_mask_16"
                                    android:clipToOutline="true">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/sleep_music_1" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start|top"
                                        android:background="@drawable/badge_bg"
                                        android:paddingStart="8dp"
                                        android:paddingEnd="8dp"
                                        android:paddingTop="4dp"
                                        android:paddingBottom="4dp"
                                        android:text="3.47min"
                                        android:textColor="@android:color/white"
                                        android:textSize="12sp" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Deep Slumber"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:paddingTop="6dp" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="slow ambient synths"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <!-- Card 2 -->
                            <LinearLayout
                                android:layout_width="260dp"
                                android:layout_height="180dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/card_item_bg"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/rounded_mask_16"
                                    android:clipToOutline="true">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/sleepmusic_2" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start|top"
                                        android:background="@drawable/badge_bg"
                                        android:paddingStart="8dp"
                                        android:paddingEnd="8dp"
                                        android:paddingTop="4dp"
                                        android:paddingBottom="4dp"
                                        android:text="3.50min"
                                        android:textColor="@android:color/white"
                                        android:textSize="12sp" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Midnight Piano"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:paddingTop="6dp" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="calm, piano melodies"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <!-- Card 3 -->
                            <LinearLayout
                                android:layout_width="260dp"
                                android:layout_height="180dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/card_item_bg"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/rounded_mask_16"
                                    android:clipToOutline="true">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/sleepmusic3" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start|top"
                                        android:background="@drawable/badge_bg"
                                        android:paddingStart="8dp"
                                        android:paddingEnd="8dp"
                                        android:paddingTop="4dp"
                                        android:paddingBottom="4dp"
                                        android:text="4.02min"
                                        android:textColor="@android:color/white"
                                        android:textSize="12sp" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ocean Lullaby"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:paddingTop="6dp" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="gentle waves"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <!-- Card 4 -->
                            <LinearLayout
                                android:layout_width="260dp"
                                android:layout_height="180dp"
                                android:background="@drawable/card_item_bg"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/rounded_mask_16"
                                    android:clipToOutline="true">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/sleepmusic4" />

                                    <ImageButton
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_gravity="end|center_vertical"
                                        android:background="@drawable/fab_circle_translucent"
                                        android:src="@drawable/ic_play_arrow_24"
                                        android:contentDescription="@string/play" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Rainforest Piano"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:paddingTop="6dp" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="soft keys + birds"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ===================== SOUNDSCAPE ===================== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_section_bg"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:background="@drawable/duration_chip_bg"
                            android:gravity="center"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Soundscape"
                            android:textColor="@color/chip_text"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:paddingTop="8dp"
                        android:paddingBottom="4dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Card A -->
                            <LinearLayout
                                android:layout_width="260dp"
                                android:layout_height="180dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/card_item_bg"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/rounded_mask_16"
                                    android:clipToOutline="true">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ocean" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start|top"
                                        android:background="@drawable/badge_bg"
                                        android:paddingStart="8dp"
                                        android:paddingEnd="8dp"
                                        android:paddingTop="4dp"
                                        android:paddingBottom="4dp"
                                        android:text="3.47min"
                                        android:textColor="@android:color/white"
                                        android:textSize="12sp" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ocean Breeze"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:paddingTop="6dp" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="waves crashing"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <!-- Card B -->
                            <LinearLayout
                                android:layout_width="260dp"
                                android:layout_height="180dp"
                                android:background="@drawable/card_item_bg"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/rounded_mask_16"
                                    android:clipToOutline="true">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/rain" />
                                    <ImageButton
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_gravity="end|center_vertical"
                                        android:background="@drawable/fab_circle_translucent"
                                        android:src="@drawable/ic_play_arrow_24"
                                        android:contentDescription="@string/play" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Rainforest Rain"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:paddingTop="6dp" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="tropical birdcalls"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ===================== NATURE ===================== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_section_bg"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:background="@drawable/duration_chip_bg"
                            android:gravity="center"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Nature"
                            android:textColor="@color/chip_text"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:paddingTop="8dp"
                        android:paddingBottom="4dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Card 1 -->
                            <LinearLayout
                                android:layout_width="260dp"
                                android:layout_height="180dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/card_item_bg"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/rounded_mask_16"
                                    android:clipToOutline="true">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/meditation1" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Sea Wind"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:paddingTop="6dp" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="coastline breeze"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <!-- Card 2 -->
                            <LinearLayout
                                android:layout_width="260dp"
                                android:layout_height="180dp"
                                android:background="@drawable/card_item_bg"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/rounded_mask_16"
                                    android:clipToOutline="true">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/meditation2" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Forest Drizzle"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:paddingTop="6dp" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="leaves + rain"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ===================== STORIES ===================== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="96dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_section_bg"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:background="@drawable/duration_chip_bg"
                            android:gravity="center"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Stories"
                            android:textColor="@color/chip_text"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:paddingTop="8dp"
                        android:paddingBottom="4dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Card 1 -->
                            <LinearLayout
                                android:layout_width="260dp"
                                android:layout_height="180dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/card_item_bg"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/rounded_mask_16"
                                    android:clipToOutline="true">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/sleeptales1" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Soft Tales"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:paddingTop="6dp" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="narrated bedtime"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <!-- Card 2 -->
                            <LinearLayout
                                android:layout_width="260dp"
                                android:layout_height="180dp"
                                android:background="@drawable/card_item_bg"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/rounded_mask_16"
                                    android:clipToOutline="true">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/sleepstory2" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Starry Fables"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:paddingTop="6dp" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="calming voices"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM BAR (your separate include) -->
    <include
        android:id="@+id/bottomBarInclude"
        layout="@layout/partial_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
