<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingsRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash">

    <!-- Top bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:navigationIconTint="@android:color/white"
        app:title="@string/settings"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white" />

    <!-- Bottom nav -->
    <include
        android:id="@+id/bottomBarInclude"
        layout="@layout/partial_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Fixed (non-scroll) content panel -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/panelContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#224B6D80"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/bottomBarInclude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="640dp"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="16dp">

            <!-- Row: Notifications with Switch -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rowNotifications"
                android:layout_width="343dp"
                android:layout_height="73dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#6DFFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:contentDescription="@string/notifications"
                        android:src="@drawable/bell" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="10dp"
                        android:text="@string/notifications"
                        android:textColor="@color/textPrimary" />

                    <Switch
                        android:id="@+id/switchNotifications"
                        android:layout_width="70dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Row: Edit Profile -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rowEditProfile"
                android:layout_width="344dp"
                android:layout_height="74dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#6DFFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:contentDescription="@string/edit_profile"
                        android:src="@drawable/user" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="10dp"
                        android:text="@string/edit_profile"
                        android:textColor="@color/textPrimary" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="@string/edit_profile"
                        android:src="@drawable/arrow" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Row: Subscription Details -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rowSubscription"
                android:layout_width="343dp"
                android:layout_height="74dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#6DFFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:contentDescription="@string/subscription_details"
                        android:src="@drawable/card" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="10dp"
                        android:text="@string/subscription_details"
                        android:textColor="@color/textPrimary" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="@string/subscription_details"
                        android:src="@drawable/arrow" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Row: Privacy & Security -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rowPrivacy"
                android:layout_width="348dp"
                android:layout_height="71dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#6DFFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:contentDescription="@string/privacy_security"
                        android:src="@drawable/verified" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="10dp"
                        android:text="@string/privacy_security"
                        android:textColor="@color/textPrimary" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="@string/privacy_security"
                        android:src="@drawable/arrow" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Row: Language -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rowLanguage"
                android:layout_width="345dp"
                android:layout_height="71dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#6DFFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:contentDescription="@string/language"
                        android:src="@drawable/world" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="10dp"
                        android:text="@string/language"
                        android:textColor="@color/textPrimary" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="@string/language"
                        android:src="@drawable/arrow" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Logout button -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="56dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/log_out"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:backgroundTint="?attr/colorPrimary"
                app:cornerRadius="16dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
