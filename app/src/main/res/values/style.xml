<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Minimal style for option buttons; no drawable, just tints -->
    <style name="Relax.OptionButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/onSecondary</item>

        <!-- rounded pill, tonal background from palette -->
        <item name="cornerRadius">16dp</item>
        <item name="rippleColor">@color/accentRipple</item>
        <item name="backgroundTint">@color/secondary</item>

        <!-- better spacing -->
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>
