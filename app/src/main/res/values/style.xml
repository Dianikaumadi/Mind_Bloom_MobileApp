<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Minimal style for option buttons; no drawable, just tints -->
    <style name="Relax.OptionButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/onSecondary</item>

        <!-- rounded pill, tonal background from palette -->
        <item name="cornerRadius">16dp</item>
        <item name="rippleColor">@color/accentRipple</item>
        <item name="backgroundTint">@color/secondary</item>

        <!-- better spacing -->
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- App theme (renamed to avoid clashing with an existing Theme.MindBloom) -->
    <style name="Theme.MindBloom.Custom" parent="Theme.Material3.DayNight.NoActionBar"/>

    <!-- Your filled button look -->
    <style name="DiscoverFilledButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">#335EA8</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="iconTint">@android:color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">2dp</item>
    </style>

    <!-- Alias renamed to avoid conflict with an existing Widget.Material3.Button.Filled -->
    <style name="Widget.Material3.Button.Filled.MindBloom" parent="DiscoverFilledButton"/>


</resources>
